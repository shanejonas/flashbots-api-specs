{
  "name": "@flashbots/api-specs",
  "description": "Flashbots Public RPC API Specifications.",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://flashbots.github.io/api-specs/",
  "main": "dist/index.js",
  "files": [
    "dist/",
    "dist/build"
  ],
  "scripts": {
    "build": "bun scripts/build.ts",
    "generate:openrpc": "bun scripts/generate-openrpc.ts",
    "clean:openrpc": "bun scripts/cleanup-openrpc.ts",
    "build:watch": "bun run generate:openrpc && bunx tsc --watch",
    "test": "bun run build && bun test",
    "coverage": "bun scripts/coverage.ts",
    "start": "bun run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flashbots/api-specs.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@open-rpc/meta-schema": "^1.14.2",
    "@open-rpc/schema-utils-js": "^1.16.1",
    "@open-rpc/test-coverage": "^2.2.4",
    "@xops.net/openrpc-cli": "^1.0.2",
    "js-yaml": "^4.1.0",
    "json-schema-merge-allof": "^0.8.1",
    "typescript": "~4.8.4"
  },
  "version": "0.14.0",
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.22"
}
